// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  plants        Plant[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Plant {
  id          String            @id @default(cuid())
  name        String
  nickname    String?
  species     PlantSpecies?     @relation(fields: [speciesId], references: [id])
  speciesId   String?
  location    PlantLocation
  area        String?
  acquiredAt  DateTime?
  notes       String?
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  photos      PlantPhoto[]
  careLogs    CareLog[]
  assessments HealthAssessment[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

enum PlantLocation {
  INDOOR
  OUTDOOR
}

model PlantSpecies {
  id             String  @id @default(cuid())
  commonName     String
  scientificName String?
  lightNeeds     String
  waterFrequency String
  humidity       String?
  temperature    String?
  toxicity       String?
  careNotes      String?
  imageUrl       String?
  plants         Plant[]
}

model PlantPhoto {
  id        String   @id @default(cuid())
  url       String
  plant     Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId   String
  caption   String?
  createdAt DateTime @default(now())
}

model CareLog {
  id       String   @id @default(cuid())
  type     CareType
  plant    Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId  String
  amount   String?
  notes    String?
  loggedAt DateTime @default(now())
}

enum CareType {
  WATERING
  FERTILIZING
  REPOTTING
  PRUNING
  PEST_TREATMENT
  OTHER
}

model HealthAssessment {
  id              String   @id @default(cuid())
  plant           Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId         String
  photoUrl        String?
  healthStatus    String
  issues          String?
  recommendations String?
  rawResponse     String?  @db.Text
  assessedAt      DateTime @default(now())
}
